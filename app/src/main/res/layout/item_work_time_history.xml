<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="?attr/cardBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09/01/2026"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvInTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="In: 09:00:00 AM"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tvWorkHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8h"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/colorSecondary"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/bg_work_hours_badge" />
        </LinearLayout>

        <!-- Break and Logout Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBreakDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Break: 30m 0s"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tvLogoutTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Out: 05:30:00 PM"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/colorTertiary" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
